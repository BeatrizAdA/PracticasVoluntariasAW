<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="./css/tasksScreen.css" media="screen" />
    <link rel="stylesheet" href="./css/tasksPrint.css" media="print" />
    <link rel="icon" href="./img/favicon.png" />
    <title>Gestor de Tareas</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Silkscreen&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Allan&display=swap" rel="stylesheet">
</head>

<body>
    <div class="container-fluid contenedor">
        <header>
            <div class="row cabecera">
                <div class="col col-2 rounded logo">
                    <h1>Tareas</h1>
                </div>
                <div class="col col-1 offset-lg-7 offset-md-5 offset-sm-5 offset-5 rounded-circle imagen">
                    <img src="./img/noUser.png" class="rounded-circle">
                </div>
                <div class="col col-2 col-lg-2 col-md-2 col-sm-2 offset-lg-0 offset-md-1 offset-sm-1 offset-2 usuario">
                    <div class="row nombre text-center rounded">
                        <h6>usuario@ucm.es</h6>
                    </div>
                    <div class="row desconectar text-center rounded">
                        <a href="" class="rounded text-responsive"><h6>Desconectar</h6></a>
                    </div>
                </div>
            </div>
        </header>
        <div class="row tareas">
            <div class="col col-12">
                <ul class="listaTareas">
                    <% if(taskList[0].text !== null) { %>
                        <% taskList.forEach(task => { %>
                            <% if(!task.done) { %>
                                <li><span class="noFinalizado"><%= task.text %></span>
                                    <span>
                                        <% task.tags.forEach(tag => { %>
                                            <span class="etiqueta rounded"><%= tag %></span>
                                        <% }); %>
                                        <span><a href="/finish/<%=task.id%>" class="finalizar rounded">Finalizar</a></span>
                                    </span>
                                </li>
                            <% } else { %>
                                <li id="finalizado"><del><%= task.text %></del></li>
                            <% } %>
                        <% }); %>
                    <% } %>
                    <li class="eliminarList">
                        <form method="POST" action="/addTask">
                            <input type="text" name="textoAÃ±adir" class="eliminarForm">
                            <input type="submit" value="AÃ±adir nueva" class="eliminarForm">
                        </form>
                    </li>
                </ul>
            </div>
        </div>
        <div class="row botones">
            <div class="col col-lg-12 col-md-12 col-sm-12 botonEliminar">
                <a href="/deleteCompleted" class="eliminar rounded">Eliminar Tareas</a>
            </div>
        </div>
    </div>
</body>

</html>